use std::{
    io::{stdout, stdin},
    rand,
    control = c,
    type::*
};

#[entry]
pub let main = ||{
    stdout::writeln("Welcome to the number guessing example.");

    let mut tries_left = 8;
    let     answer     =  rand::randi_range(0, 99);

    c::while(
        || bool {~const::true;},
        ||{
            stdout::writeln("You have " + tries_left.to_string() + " tries left.");
            stdout::write("Enter a number:");
            let guess = stdin::read_uint();
        }
    );
};
